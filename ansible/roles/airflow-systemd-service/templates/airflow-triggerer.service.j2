[Unit]
Description=Airflow Triggerer
After=network.target

[Service]
EnvironmentFile=/usr/lib/systemd/system/airflow
User={{ ansible_user }}
Group={{ ansible_user }}
Restart=always
ExecStart=/usr/local/bin/airflow triggerer

[Install]
WantedBy=multi-user.target
